{
  "name": "kirbyup",
  "type": "module",
  "version": "4.0.0-alpha.1",
  "packageManager": "pnpm@9.5.0",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "author": {
    "name": "Johann Schopplich",
    "email": "hello@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "homepage": "https://kirbyup.getkirby.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "bugs": "https://github.com/johannschopplich/kirbyup/issues",
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "cli",
    "panel",
    "bundler"
  ],
  "exports": {
    ".": {
      "types": "./dist/node/index.d.mts",
      "default": "./dist/node/index.mjs"
    },
    "./config": {
      "types": "./dist/client/config.d.mts",
      "default": "./dist/client/config.mjs"
    },
    "./plugin": {
      "types": "./dist/client/plugin.d.mts",
      "default": "./dist/client/plugin.mjs"
    }
  },
  "types": "./dist/node/index.d.mts",
  "typesVersions": {
    "*": {
      "config": [
        "./dist/client/config.d.mts"
      ],
      "plugin": [
        "./dist/client/plugin.d.mts"
      ]
    }
  },
  "bin": {
    "kirbyup": "bin/kirbyup.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsdown",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp",
    "test": "vitest --no-isolate",
    "test:types": "tsc --noEmit"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/compiler-sfc": "^3.4.23",
    "c12": "^3.0.0",
    "cac": "^6.7.14",
    "chokidar": "^4.0.3",
    "consola": "^3.4.2",
    "magic-string": "^0.30.21",
    "nypm": "^0.6.2",
    "pathe": "^2.0.3",
    "perfect-debounce": "^2.0.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "rollup-plugin-external-globals": "^0.13.0",
    "sass": "^1.94.2",
    "vite": "^6.4.1",
    "vite-plugin-full-reload": "^1.2.0",
    "vue": "^2.7.16"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
